@model ExternalRegisterBindingModel

@{
    ViewData["Title"] = "Восстановление пароля";
}

<div class="recovery__main">
    <div class="recovery__container">
        <h2 class="deda">Passworgd recovery</h2>
        <form asp-controller="Account" asp-action="ExternalRegistration" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <div class="fake__form-input">
                    <input asp-for="Email" class="form-input" />
                </div>
                <span asp-validation-for="Email" class="form-span"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="submit__btn">Submit</button>
            </div>
        </form>
    </div>
</div>