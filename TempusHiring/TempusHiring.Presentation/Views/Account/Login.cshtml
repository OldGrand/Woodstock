@model TempusHiring.Presentation.Models.AccountViewModels.LoginViewModel

@{ 
    ViewBag.Title = "Sign in"; 
}

<div class="login-register">
    <div class="login-register__container">
        <div class="login-register__header">
            <h3 class="login-register__title title_active">
                Sign In
            </h3>
        </div>
        <div class="login-register__froms">
            <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <div class="fake__form-input">
                        <input asp-for="Email" class="form-input">
                    </div>
                    <div class="error__message-block">
                        <span asp-validation-for="Email" class="form-span"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <div class="fake__form-input">
                        <input asp-for="Password" class="form-input" type="password">
                    </div>
                    <div class="error__message-block">
                        <span asp-validation-for="Password" class="form-span"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input asp-for="RememberMe" />
                    <label asp-for="RememberMe" class="control-label"></label>
                </div>
                <div class="extended-group">
                    <input class="form-submit" type="submit" value="Sign in" />
                </div>

                <div class="extended-references">
                    <a asp-controller="Account" asp-action="Registration" class="forgotPassword">Sign up</a>
                    <a asp-controller="Account" asp-action="ForgotPassword" class="forgotPassword">Forgot password?</a>
                </div>
            </form>
        </div>

        <div class="form-socials">
            <a class="social-form__link" asp-controller="Account" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" asp-route-provider="@VkontakteAuthenticationDefaults.AuthenticationScheme">
                <svg class="svg svg__vk_color svg__deda" viewBox="0 0 112.196 112.196">
                    <use xlink:href="/images/icons/vk-color.svg#vk-color"></use>
                </svg>
            </a>
            <a class="social-form__link" asp-controller="Account" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" asp-route-provider="@GoogleDefaults.AuthenticationScheme">
                <svg class="svg svg__google_color svg__deda" viewBox="0 0 512 512">
                    <use xlink:href="/images/icons/google-color.svg#google-color"></use>
                </svg>
            </a>
            <a class="social-form__link" asp-controller="Account" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" asp-route-provider="@FacebookDefaults.AuthenticationScheme">
                <svg class="svg svg__fb_color svg__deda" viewBox="0 0 112.196 112.196">
                    <use xlink:href="/images/icons/facebook-color.svg#facebook-color"></use>
                </svg>
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}