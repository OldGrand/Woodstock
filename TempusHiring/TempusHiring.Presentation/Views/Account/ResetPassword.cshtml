@model TempusHiring.Presentation.Models.AccountViewModels.ResetPasswordViewModel

@{ ViewData["Title"] = "Password recovery"; }

<div class="recovery__main">
    <div class="recovery__container">
        <h2 class="deda">Password recovery</h2>
        <form asp-controller="Account" asp-action="ResetPassword" method="post"
              asp-route-ResetToken="@Model.ResetToken" asp-route-Email="@Model.Email" class="form">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <div class="fake__form-input">
                    <input asp-for="Password" class="form-input" />
                </div>
                <span asp-validation-for="Password" class="form-span"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <div class="fake__form-input">
                    <input asp-for="ConfirmPassword" class="form-input" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="form-span"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="submit__btn">Reset</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}