@using TempusHiring.Presentation.Models.ViewModels
@model TempusHiring.Presentation.Models.ViewModels.FilteredWatchViewModel

@{
    ViewData["Title"] = "Catalog";
}

<div class="main__container">
    <div class="filter">
        <div class="filter__container" style="width: 250px">
            <div class="filter__range">
                <h3>filter by price</h3>
                <div class="slider" data-value-0="#first" data-value-1="#second" data-range="#third"></div>
                <form class="box__container" asp-route-ItemsOnPage="@Model.ItemsOnPage" asp-route-Filter="@Model.Filter" method="POST">
                    <div class="values">
                        <div>$<spam name="StartPrice" id="first"></spam></div> - <div>$<span name="EndPrice" id="second"></span></div>
                        <input type="hidden" asp-for="@Model.PriceRange.StartPrice" class="zalupa__start" />
                        <input type="hidden" asp-for="@Model.PriceRange.EndPrice" class="zalupa__end" />
                        <input type="hidden" asp-for="@Model.PriceRange.StartBorder" />
                        <input type="hidden" asp-for="@Model.PriceRange.EndBorder" />
                    </div>
                    <input type="submit" value="Filter" class="submit__btn zalupa" />
                </form>
            </div>

